<div class="main">
  <div class="">
    <div class="form-wrap">
      <div class="form-group text-center">
      </div>
      <%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
		<%= f.text_field :name, autofocus: true, placdholder: "名前", class: "form-control"%>
	</div>
	<div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "サインイン", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
      <br>
      <p class="devise-link">
        アカウントをおもちでない場合はこちら
        <%= link_to "サインアップする", new_user_registration_path %>
      </p>

    </div>
  </div>
</div>
